<div class="container">
<h2 class="page-header">Search Notes</h2>
<div class="inner-container">
<form action="/notes" method="get">
    <div class="form-row">
        <div class="form-item">
            <label>Name:</label>
            <input type="text" name="name" value="<%= searchOptions.name %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
    <% notes.forEach(note => { %>
        <div class="index-contents-data-other">
            <p><span>Name: </span> <%= note.name %></p>
        </div>
        <div class="btn-row">
            <a class="btn btn-primary" href="/notes/<%= note.id %>">View</a>
            <a class="btn btn-primary" href="/notes/<%= note.id %>/edit">Edit</a>
            <%- include('../partials/deleteForm', {url: `/notes/${note.id}`}) %>
        </div>
        
<% }) %>

</form>
</div>
</div>